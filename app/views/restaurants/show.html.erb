<div class="text-center my-3">
  <h1><%= @restaurant.name %></h1>
  <h2>(<%= @restaurant.category %>)</h2>

  <hr>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %>
        <% review.rating.times do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <br>


  <hr>
  <i class="fa-solid fa-location-dot"></i>
    <p>Find us at: <%= @restaurant.address %></p>

  <i class="fa-solid fa-phone"></i>
    <p>Contact us: <%= @restaurant.phone_number %></p>

  <br>
  <div>
    <h2>Add a review </h2>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  </div>
<%= link_to "<< Back to list", restaurants_path, class: "btn border-bottom 1px solid gray" %>

</div>
