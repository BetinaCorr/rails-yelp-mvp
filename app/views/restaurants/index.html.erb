<div class="text-center my-5" >
  <div class="row justify-content-center">
    <h1>Our Restaurants!</h1>
    <%= link_to "+ Add a new restaurant", new_restaurant_path(@restaurant), class: "btn border 1px solid gray" %>
  </div>
  <ul style="list-style: none;">
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= restaurant.name %>
        -
        <%= link_to "See details", restaurant_path(restaurant), class: "btn border-bottom 1px solid gray" %>
      </li>
    <% end %>
  </ul>


</div>
